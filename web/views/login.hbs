<div class="jumbotron mb-0 d-flex flex-column align-items-center justify-content-center min-90" id="login">
    <h1 class="display-3">Orthto-Insight</h1>
    <h2>Digital Dashboard</h2>
    <img src="/logo" style="width: 20%"/>
    <br>
    <div class="container-fluid  text-center" style="width:30%">
        <div class="form-group">
            <form action="/" method="post" role="form" enctype="application/x-www-form-urlencoded">
                <label for="e_mail">Email: </label>
                <input type="text" class="form-control" name="e_mail" id="e_mail" required="required">
                <label for="password">Password </label>
                <input type="password" class="form-control" name="password" id="password" required="required">
                <br>
                <button class="btn btn-outline-secondary btn-lg" type="submit">Log In!</button>
                {{!-- <br>
                <br>
                <button class="btn btn-outline-secondary btn-lg" type="submit">Sign up!</button> --}}
            </form>
        </div>
    </div>
    <div class="container-fluid  text-center" style="width:30%">
    {{#if loginPass}}
        <h2>Login Failed!</h2>
        <h3>Please try again.</h3>
    {{/if}}
    {{#if loginError}}
        <h2>Error Retrieving Data</h2>
        <h3>Please try again.</h3>
    {{/if}}
    </div>
</div>